<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>net.sf</groupId>
  <artifactId>cobolToJson</artifactId>
  <version>0.93.3</version>
  <packaging>jar</packaging>

  <properties>
    <!-- Optionally define main class relative to artifact -->
    <main.class>${project.groupId}.${project.artifactId}.Data2Json</main.class>
  </properties>

  <dependencies>
    <dependency>
      <groupId>net.sf.jrecord</groupId>
      <artifactId>JRecord</artifactId>
      <version>0.93.3</version>
    </dependency>
    <dependency>
      <groupId>net.sf.cb2xml</groupId>
      <artifactId>cb2xml</artifactId>
      <version>1.01.08</version>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>2.17.2</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Maven Shade Plugin for creating a fat jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>false</createDependencyReducedPom>
              <artifactSet>
                <includes>
                  <include>net.sf.jrecord:JRecord</include>
                  <include>net.sf.cb2xml:cb2xml</include>
                  <include>com.fasterxml.jackson.core:jackson-core</include>
                </includes>
              </artifactSet>
              <transformers>
                <!-- Set Main-Class dynamically using groupId/artifactId -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>${main.class}</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

