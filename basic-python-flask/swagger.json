{
  "swagger": "2.0",
  "info": {
    "title": "Sample API",
    "description": "A sample API that demonstrates how to use Flask-SwaggerUI.",
    "version": "1.0"
  },
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/hello": {
      "get": {
        "summary": "Returns a simple greeting message.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}

